<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_share_text"
            android:text="文字分享"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_share_img"
            android:text="图片分享"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_share_music"
            android:text="音乐分享"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_share_video"
            android:text="视频分享"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_share_web"
            android:text="网页分享"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_auth"
            android:text="微信登录"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_wx_pay"
            android:text="微信支付"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_share2_circle"
        android:text="是否分享到朋友圈"
        />

</LinearLayout>