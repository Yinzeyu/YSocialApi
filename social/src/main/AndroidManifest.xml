<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yin.social" >
  <application >

    <activity
        android:name="com.tencent.connect.common.AssistActivity"
        android:screenOrientation="portrait" />
    <!--Weixin-->
    <activity
        android:name="com.yin.social.handler.wx.WXCallbackActivity"
        android:configChanges="orientation|keyboardHidden|navigation|screenSize"
        android:exported="true"
        android:launchMode="singleTop"
        android:theme="@android:style/Theme.Translucent" />

    <activity
        android:name="com.yin.social.handler.wx.WXPayCallbackActivity"
        android:configChanges="orientation|keyboardHidden|navigation|screenSize"
        android:exported="true"
        android:launchMode="singleTop"
        android:theme="@android:style/Theme.Translucent" />
    <!-- 微信支付 -->
    <activity-alias
        android:name="${applicationId}.wxapi.WXEntryActivity"
        android:exported="true"
        android:targetActivity="com.yin.social.handler.wx.WXCallbackActivity"
        android:theme="@android:style/Theme.Translucent" />

    <activity-alias
        android:name="${applicationId}.wxapi.WXPayEntryActivity"
        android:exported="true"
        android:targetActivity="com.yin.social.handler.wx.WXPayCallbackActivity"
        android:theme="@android:style/Theme.Translucent" />

  </application>
</manifest>
